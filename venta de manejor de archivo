    public void botonnuevo(String Archivo){
        File archivo = new File(Archivo);
        try {
            PrintWriter salida = new PrintWriter(new FileWriter(archivo));
            salida.close();
            System.out.println("El archivo se ha creado correctamente\n");
        } catch (IOException ex) {
            ex.printStackTrace();
        }
        
    }
    
    private void btnnuevoActionPerformed(java.awt.event.ActionEvent evt) {                                         
        botonnuevo("Archivo");
        
    }                                        

    private void EscribirActionPerformed(java.awt.event.ActionEvent evt) {                                         
       
        botonnuevo("Escribir Archivo");
        Archivos escribir = new Archivos();
        escribir.escribirArchivo("creacioDeArchivo.txt");
        
        
    }                                        

    private void LeerActionPerformed(java.awt.event.ActionEvent evt) {                                     

        botonnuevo("Leer el archivo"); 
        Archivos leer = new Archivos();
        leer.leerArchivo("creacioDeArchivo.txt");
        

    }                                    

